##############################################################################
#
# Blitz++ demos makefile
#

VPATH = @srcdir@
BZDIR = @top_srcdir@

CXX = @CXX@
CXXFLAGS = @CXXFLAGS@ @CXX_OPTIMIZE_FLAGS@ @CXXFFLAGS@ -I$(BZDIR)
F77 = @F77@
F77FLAGS = @F77_OPTIMIZE_FLAGS@
F90 = @F90@
F90FLAGS = @F90_OPTIMIZE_FLAGS@

LIBS = -L$(BZDIR)/lib -lblitz -lm @BLASLIB@ @FORTLIBS@

.SUFFIXES: .o .cpp .f

.cpp.o:
	$(CXX) $(CXXFLAGS) -c $*.cpp

.f.o:
	$(F77) $(F77FLAGS) -c $*.f

############################################################################


DEMOS = acoustic

run:	all
	@for demo in $(DEMOS) ; do \
	  ./$$demo; \
	done

############################################################################

acoustic:	acoustic.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o acoustic acoustic.o $(LIBS)

###########################################################################

clean:
	rm -f *.o *.ii *.int.c *.s ${DEMOS}

all:

install:

check:

distdir: Makefile.in
	cp -pR Makefile.in ../@PACKAGE@-@VERSION@/demos

distclean: 
	-rm -f Makefile

